#include <stdio.h>

int main() {
    int arr[10], n, i;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    for (i = 0; i < n; i++) {
        if ((i == 0 || arr[i] >= arr[i - 1]) && 
            (i == n - 1 || arr[i] >= arr[i + 1])) {
            printf("A peak element is %d at position %d\n", arr[i], i + 1);
            break;
        }
    }

    return 0;
}
